.section{
  width: 90%;
  overflow: hidden;
  box-sizing: border-box;
  background: white;
  margin: 0 auto;
  margin-top: 20px;
}
.info{
  width: 100%;
  height: 100px;
   display: flex;
  box-sizing: border-box;

}

.infoOne{
  width: 33%;
  float: left;
  text-align: center;
    box-sizing: border-box;
}
.infoOne>text{
  display: block;
  height: 25px;
color: #ccc;
margin-top: 5px;
line-height: 25px;
 font-size: 12px;
}
.infoOneSon{
  box-sizing: border-box;
  height: 25px;
  width: 100%;
  padding: 0px;
}
.infoOneSon view:first-child{
  width: 50%;
  height: 25px;
  float: left;
  text-align: right;
}
.infoOneSon view:first-child>image{
  width: 25px;
  height: 25px;
  margin-right: 5px
  
}
.infoOneSon view:last-child{
   width: 50%;
  height: 30px;
  float: right;
  text-align: left;
}
.infoOneSon view:last-child text{
  line-height: 30px;
  font-size: 15px;
}
.infoOneSon>text{
margin-bottom: 5px;
  font-size: 15px;
  line-height: 20px;
}
