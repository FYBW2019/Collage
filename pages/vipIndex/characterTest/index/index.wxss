@import '/style/weui.wxss';
.nav {
  width: 100%;
  height: 150px;
}

.backImage {
  width: 100%;
  height: 100%;
}

.userBox {
  width: 30%;
  height: 150px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  text-align: center;
}

.userBox>image {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-top: 40px;
}

.name {
  width: 70%;
  height: 75px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 30%;
}

.name text {
  width: 100%;
  font-size: 15px;
  color: white;
  display: block;
  margin-top: 40px;
}

.info {
  width: 70%;
  height: 75px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 75px;
  left: 30%;
}

.infoPage {
  width: 33%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  padding: 0px;
}

.infoPageLeft {
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageRight {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageLeft>image {
  width: 20px;
  height: 20px;
}

.infoPageRight text {
  font-size: 15px;
  color: white;
  width: 100%;
  overflow: hidden;
  display: block;
  margin-bottom: 15px;
}
.info2{
  margin-bottom: 10px;
}
.pageHander{
  width: 100%;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  text-align: center;
  font-size: 18px;
  color: rgba(15, 129, 95, 0.808);
}
.txt{
  width: 100%;
  height: 170px;
  box-sizing: border-box;
  font-size: 15px;
  padding: 0 30px;
  text-indent: 65rpx;
}
.bton{
  width: 70%;
  height: 40px;
  line-height: 40px;
  
}
button::after {
  border: none;
}
button {
  border: 1px solid rgba(236, 100, 9, 0.925);
  color:  rgba(236, 100, 9, 0.925);
  margin-top: 10px;
  height: 50px;
  width: 100%;
  line-height: 50px;
  font-size: 15px;
}
