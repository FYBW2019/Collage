@import '/style/weui.wxss';

.nav {
  width: 100%;
  height: 80px;
}

.backImage {
  width: 100%;
  height: 100%;
}

.userBox {
  width: 30%;
  height: 80px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  text-align: center;
}

.userBox>image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 20px;
}

.name {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 30%;
}

.name text {
  width: 100%;
  font-size: 13px;
  color: white;
  display: block;
  margin-top: 20px;
}

.info {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 40px;
  left: 30%;
}

.infoPage {
  width: 33%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  padding: 0px;
}

.infoPageLeft {
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageRight {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageLeft>image {
  width: 20px;
  height: 20px;
}

.infoPageRight text {
  font-size: 13px;
  color: white;
  width: 100%;
  overflow: hidden;
  display: block;
}

button::after {
  border: none;
}

button {
  border: 1px solid rgba(228, 225, 223, 0.2);
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-size: 15px;
}

.selected {
  border: 1px solid rgba(238, 81, 9, 0.644);
  color: rgba(238, 81, 9, 0.644);
}
.history-table-wrap {
  width: 100%;
  height: 330px;
  box-sizing: border-box;
  overflow-y: scroll;
  overflow-x: hidden;
}

.pl {
  font-family: "楷体";
  color: #1a0303;
}

.put {
  margin: 0 auto;
  width: 90%;
  border: 1px solid rgba(228, 225, 223, 0.2);
  border-radius: 5px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  z-index: -10;
  background-color:rgba(228, 225, 223, 0.2);
}

.bton2 {
  width: 90%;
}

.bton3 {
  width: 80%;

}
.button-sp-area{
  width: 100%;
  overflow: hidden;
}
.weui-flex {
  margin-top: 10px;
  padding: 0px;
}
.all{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.page__bd_spacing {
  width: 80%;
  margin-left: 20%;
height: 100%;
  position: absolute;
  top: 0px;
  display: block;
  background-color: #fff;

}

.show2 {
  border-bottom: 2px solid #1a0303;
}

.placeholder {
  text-align: center;
  padding: 10px 0;
}

.section1 {
  width: 100%;
  height: 100%;
}

.hander {
  width: 99%;
  margin: 0 auto;
  height: 100px;
  border: 1px #1a0303 solid;
  border-radius: 20px;
  margin-top: 10px;
}

.hander>text {
  border: 1px solid salmon;
  overflow: hidden;
  width: 100px;
  text-align: center;
  float: left;
  background-color: #ec9480;
  margin-left: 5px;
  font-size: 15px;
  display: block;
  padding: 5px 0 0 0;
  border-radius: 10px;
  text-justify: inter-cluster;
  font-family: "楷体";
  margin-top: 5px;
}

.leftList {
  width: 100%;
  height: 35px;
  text-align: center;
  padding: 10px 0 0 0;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.majorClass{
  font-weight: bold ;
  color: red;
}


.section {
  margin-top: 5px;
  width: 99%;
  overflow: hidden;
  border: 1px solid #ccc;
  font-family: "楷体";
}

.left {
  width: 49%;
  overflow: hidden;
  float: left;
  border-right: 1px solid #ccc;
}

.check {
  width: 30%;
  height: 100%;
  float: left;
}

.te {
  width: 70%;
  height: 100%;
  float: right;
}

.show {
  width: 50%;
  overflow: hidden;
  float: right;
}

.RightList {
  width: 100%;
  height: 35px;
  text-align: center;
  padding: 10px 0 0 0;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.Table {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(238, 82, 9, 0.89);
}

/* 表格代码   */

.table {
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th{
  height: 40px;
  box-sizing: 40px;
  line-height: 40px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  background-color: rgba(238, 82, 9, 0.89);
  width: 100%;

  
}
 .td {
  height: 40px;
  box-sizing: 40px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}

.th1, .th2, .td1, .td2 {
  width: 40%;
}
.td2{
  height: 40px;
  line-height: 40px;
}
.th {
  font-weight: 800;
  font-size: 28rpx;
  color: white;
}

.td {
  font-size: 26rpx;
}


.mini-btn1 {
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    text-align: center;
    
}
.mini-btn2 {
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid rgb(110, 216, 84);
    border-radius: 8rpx;
    text-align: center;
}
.button-container {
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-around;
    font-size: 24rpx;
    text-align: center;
    border-bottom: 2rpx solid #eaeaea;
}



