    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    text-align: center;
    
}
.mini-btn2 {
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid rgb(110, 216, 84);
    border-radius: 8rpx;
    text-align: center;
}
.button-container {
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-around;
    font-size: 24rpx;
    text-align: center;
    border-bottom: 2rpx solid #eaeaea;
}



