@import '/style/weui.wxss';
.ban{
  background-color: rgba(204, 204, 204, 0.158);
  color: rgba(204, 204, 204, 0.63);
}
.section {
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  margin-top: 10px;
}

button::after {
  border: none;
}

button {
  border: 1px solid rgba(228, 225, 223, 0.2);
  margin-top: 10px;
  height: 50px;
  width: 100%;
  line-height: 50px;
  font-size: 15px;
}

.selected {
  border: 1px solid rgba(238, 81, 9, 0.644);
  color: rgba(238, 81, 9, 0.644);
}

.nav {
  width: 100%;
  height: 150px;
}

.backImage {
  width: 100%;
  height: 100%;
}

.userBox {
  width: 30%;
  height: 150px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  text-align: center;
}

.userBox>image {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-top: 40px;
}

.name {
  width: 70%;
  height: 75px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 30%;
}

.name text {
  width: 100%;
  font-size: 15px;
  color: white;
  display: block;
  margin-top: 40px;
}

.info {
  width: 70%;
  height: 75px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 75px;
  left: 30%;
}

.infoPage {
  width: 33%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  padding: 0px;
}

.infoPageLeft {
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageRight {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageLeft>image {
  width: 20px;
  height: 20px;
}

.infoPageRight text {
  font-size: 15px;
  color: white;
  width: 100%;
  overflow: hidden;
  display: block;
  margin-bottom: 15px;
}
