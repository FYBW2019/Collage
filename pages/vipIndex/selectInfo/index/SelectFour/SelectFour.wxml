<view class='page__hd'>
  <view class="weui-cell">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image src="{{avatarUrl}}" style="width: 50px; height: 50px; display: block" />
    </view>
    <view class="weui-cell__bd">
      <view>
        <text>{{nickName}}</text>
      </view>
      <view>生源地:
        <text>西藏</text>
      </view>
    </view>
    <view class="weui-cell__bd">
      <view>等级:
        <text>v1</text>
      </view>
      <view>当前积分:
        <text>500</text>
      </view>
    </view>
  </view>
  <view class='section'>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker mode="date" fields="year" start="2013" end="2017" bindchange="bindDateChange">
          <button class='bton'>年份:{{year}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange2" range="{{SchoolList}}">
          <button class='bton'>{{SchoolName}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <right-picker bind:chooseEvent='choose' chooseList='{{ chooseList }}' multiple='{{ multiple }}'></right-picker>
      </view>

    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton3' bindtap='selectResult'>查询</button>
      </view>
    </view>
  </view>
  <view class="parent"  style='display: {{show}}'>
    <view class="tr">
      <view class="th">文理</view>
      <view class="th">专业名称</view>
      <view class="th">年份</view>
      <view class="th">最高分</view>
      <view class="th">平均分</view>
      <view class="th">最低分</view>
      <view class="th">平均位次</view>
    </view>
    <scroll-view scroll-x style="width: 80%;float:right">
      <view>
        <view class="table">
          <block wx:for="{{results}}" wx:key="index">
            <view class="trr">
              <view class="td">{{item.type}}</view>
              <view class="txt" id="{{index}}" bindtap='majorInfo'>{{item.major}}</view>
              <view class="td">{{item.year}}</view>
              <view class="td">{{item.max}}</view>
              <view class="td">{{item.avg}}</view>
              <view class="td">{{item.min}}</view>
              <view class="td">{{item.avgRanking}}</view>
            </view>
          </block>
        </view>
      </view>
    </scroll-view>
  </view>
</view>
<cover-view class="pop-up-textarea-bg" wx:if="{{isShow}}">
  <cover-view class="pop-up-textarea-container">
    <cover-view class="top-view">
      <cover-view class="title">专业介绍</cover-view>
      <cover-view bindtap="onCancelOrderPay" class="cancel">X</cover-view>
      <!-- <cover-image  ></cover-image> -->
    </cover-view>
    <cover-view class="top-line-view"></cover-view>
    <cover-view class="pay-money-title">{{txt}}</cover-view>
    
  </cover-view>
</cover-view>