<view class='page__hd'>
  <view class="weui-cell">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image src="{{avatarUrl}}" style="width: 50px; height: 50px; display: block" />
    </view>
    <view class="weui-cell__bd">
      <view>
        <text>{{nickName}}</text>
      </view>
      <view>生源地:
        <text>西藏</text>
      </view>
    </view>
    <view class="weui-cell__bd">
      <view>等级:
        <text>v1</text>
      </view>
      <view>当前积分:
        <text>500</text>
      </view>
    </view>
  </view>
  <view class='section'>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton'>年份</button>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton'>大学名称</button>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton'>专业名称</button>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton3'>查询</button>
      </view>
    </view>
  </view>
  <view class="parent">
    <view class="tr">
      <view class="th">专业名称</view>
      <view class="th">年份</view>
      <view class="th">最高分</view>
      <view class="th">平均分</view>
      <view class="th">最低分</view>
      <view class="th">位次</view>
    </view>
    <scroll-view scroll-x style="width: 80%;float:right">
      <view>
        <view class="table">
          <block wx:for="{{60}}">
            <view class="trr">
              <view class="td">控制工程</view>
              <view class="td">2017</view>
              <view class="td">448</view>
              <view class="td">448</view>
              <view class="td">448</view>
              <view class="td">2</view>
            </view>
          </block>
        </view>
      </view>
    </scroll-view>
  </view>
</view>