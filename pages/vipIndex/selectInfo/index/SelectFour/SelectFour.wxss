@import '/style/weui.wxss';
.weui-flex__item{
  margin: 0px;
  padding: 0px;
}
.nav {
  width: 100%;
  height: 80px;
}

.backImage {
  width: 100%;
  height: 100%;
}

.userBox {
  width: 30%;
  height: 80px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  text-align: center;
}

.userBox>image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 20px;
}

.name {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 30%;
}

.name text {
  width: 100%;
  font-size: 13px;
  color: white;
  display: block;
  margin-top: 20px;
}

.info {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 40px;
  left: 30%;
}

.infoPage {
  width: 33%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  padding: 0px;
}

.infoPageLeft {
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageRight {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageLeft>image {
  width: 20px;
  height: 20px;
}

.infoPageRight text {
  font-size: 13px;
  color: white;
  width: 100%;
  overflow: hidden;
  display: block;
}

button::after {
  border: none;
}

button {
  border: 1px solid rgba(228, 225, 223, 0.2);
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-size: 15px;
}

.selected {
  border: 1px solid rgba(238, 81, 9, 0.644);
  color: rgba(238, 81, 9, 0.644);
}
.bton{
  width: 90%;

}
.bton3{
  width: 80%;
}
.weui-flex{
  margin-top: 10px;
}
.parent {
  width: 100%;
  height: 280px;
  box-sizing: border-box;
  
}

/* 表格代码   */
.table {
  display: flex;
 
}
scroll-view{
 border-bottom: 1px solid rgba(245, 82, 7, 0.911);
}

.tr {
  width: 20%;
  display: block;
  float: left;
  justify-content: space-between;
}

.trr {
  display: block;
