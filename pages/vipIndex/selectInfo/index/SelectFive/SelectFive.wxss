@import '/style/weui.wxss';
.nav {
  width: 100%;
  height: 80px;
}

.backImage {
  width: 100%;
  height: 100%;
}

.userBox {
  width: 30%;
  height: 80px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  text-align: center;
}

.userBox>image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 20px;
}

.name {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 30%;
}

.name text {
  width: 100%;
  font-size: 13px;
  color: white;
  display: block;
  margin-top: 20px;
}

.info {
  width: 70%;
  height: 40px;
  box-sizing: border-box;
  position: absolute;
  z-index: 100;
  top: 40px;
  left: 30%;
}

.infoPage {
  width: 33%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  padding: 0px;
}

.infoPageLeft {
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageRight {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  display: block;
  float: left;
}

.infoPageLeft>image {
  width: 20px;
  height: 20px;
}

.infoPageRight text {
  font-size: 13px;
  color: white;
  width: 100%;
  overflow: hidden;
  display: block;
}
button::after {
  border: none;
}

button {
  border: 1px solid rgba(228, 225, 223, 0.2);
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-size: 15px;
}

.selected {
  border: 1px solid rgba(238, 81, 9, 0.644);
  color: rgba(238, 81, 9, 0.644);
}
.bton{
  width: 90%;

}
.bton3{
  width: 80%;
}
.weui-flex{
  margin-top: 10px;
}
.Table{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
/* 表格代码   */
.table{
  border-right:0;
  border-bottom: 0;
  width: 100%;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th{
  height: 40px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  line-height: 40px;
  box-sizing: border-box;
  text-align: center;
  width: 100%;
  background-color: rgba(245, 82, 7, 0.911);
}
.history-table-wrap{
  width: 100%;
  height: 578rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  border-bottom: 1px solid rgba(245, 82, 7, 0.911);
  
}
.td{
  height: 40px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  box-sizing: border-box;
  text-align: center;
  width: 100%;
}
.th1,.th2,.td1,.td2{
  width: 40%;
}
.td2{
   line-height: 40px;
}
.td1{
  overflow-y: hidden;
  overflow-x: scroll;
}
.th{
  font-weight: 800;
  font-size: 28rpx;
    color: white;
}
.td{
  font-size: 28rpx;
}
.pl{
  text-align: center;
  font-family: "楷体";
  color: #330e0e;
}
.put{
  width: 90%;
  border: 1px solid rgba(228, 225, 223, 0.2);
  border-radius: 5px;
  font-family: "楷体";
    background-color: rgba(228, 225, 223, 0.2);
  height: 40px;
  line-height: 40px;
  margin: 0 auto;
  text-align: center;
}


