<view class='page__hd'>
  <view class="weui-cell">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image src="{{avatarUrl}}" style="width: 50px; height: 50px; display: block" />
    </view>
    <view class="weui-cell__bd">
      <view>
        <text>{{nickName}}</text>
      </view>
      <view>生源地:
        <text>安徽</text>
      </view>
    </view>
    <view class="weui-cell__bd">
      <view>等级:
        <text>V{{vip}}</text>
      </view>
      <view>当前积分:
        <text>500</text>
      </view>
    </view>
  </view>
  <view class='section'>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker mode="date" fields="year" value="2018" start="2013" end="2018" bindchange="bindDateChange">
          <button class='bton' type="default" plain="true">年份:{{year}}</button>
        </picker>
      </view>

    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange2" range="{{typeList}}">
          <button class='bton' type="default" plain="true">文理:{{type}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange" range="{{socres}}">
          <button class='bton' type="default" plain="true">{{score}}</button>
        </picker>
      </view>
    </view>


    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton3' bindtap='serachResult'>查询</button>
      </view>
    </view>
  </view>
  <view class='Table'>
    <view class="tr">
      <view class="th th1">分数</view>
      <view class="th th2">平均位次</view>
      <view class="th th2">最前位次</view>
      <view class="th th2">最后位次</view>
    </view>
    <view class='history-table-wrap'>
      <view class="table">
        <view class="tr" wx:for="{{list}}">
          <view class="td td1">{{item.score}}</view>
          <view class="td td2">{{item.rankingAvg}}</view>
          <view class="td td2">{{item.rankingMin}}</view>
          <view class="td td2">{{item.rankingMax}}</view>
        </view>
      </view>
    </view>
  </view>

</view>