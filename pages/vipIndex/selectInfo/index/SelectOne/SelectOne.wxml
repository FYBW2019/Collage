      <view class='one'>
        投档线
      </view>
      <view class='two'>
        <view class='two2'>当年</view>
        <view class='two3'>平均</view>
      </view>
    </view>
    <view class="th">
      <view class='one one2'>
        线差
      </view>
      <view class='two'>
        <view class='two2'>当年</view>
        <view class='two3'>平均</view>
      </view>
    </view>
    <view class="th">
      <view class='one'>
       省排名
      </view>
      <view class='two'>
        <view class='two2'>当年</view>
        <view class='two3'>平均</view>
      </view>
    </view>
  </view>
