      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange" range="{{batchList}}">
        <button class='bton'>{{batch}}</button>
        </picker>
      </view>
      <view class="weui-flex__item">
      <picker mode="date" fields="year" start="1970" end="2019" bindchange="bindDateChange">
        <button class='bton'>{{year}}</button>
         </picker>
      </view>
      <view class="weui-flex__item">
      <picker bindchange="bindPickerChange2" range="{{accountList}}">
        <button class='bton'>{{account}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
      <picker bindchange="bindPickerChange3" range="{{provinceList}}">
        <button class='bton'>{{SchoolProvince}}</button>
        </picker>
      </view>
      <view class="weui-flex__item">
        <button class='bton'>大学名称</button>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton3'>查询</button>
      </view>
    </view>
  </view>
  <view class="parent">
  <view class="tr">
    <view class="th">学校名称</view>
    <view class="th">年份</view>
    <view class="th">批次线</view>
