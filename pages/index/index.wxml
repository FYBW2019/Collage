<view class='page__hd'>
  <view class='pageHander'>
    <text>高考志愿辅助系统</text>
  </view>
  <view class='section'>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange" range="{{provinceList}}">
          <button class='bton weui-btn' type="default">省份:{{province}}</button>
        </picker>
      </view>
      <view class="weui-flex__item">
        <picker mode="date" fields="year" start="1970" end="2019" bindchange="bindDateChange">
          <button class='bton'>年份:{{year}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange2" range="{{provinceList}}">
          <button class='bton'>{{SchoolProvince}}</button>
        </picker>
      </view>
      <view class="weui-flex__item">
        <picker bindchange="bindPickerChange3" range="{{natureList}}">
          <button class='bton'>{{nature}}</button>
        </picker>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <input type='text' class='bton2' placeholder='请输入大学名称' placeholder-class='inputShow' />
        <!-- <button class='bton2'>大学名称</button> -->
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <input class='bton2' placeholder='请输入专业名称' placeholder-class='inputShow' />
        <!-- <button class='bton2'></button> -->
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <button class='bton3 weui-btn' type="primary" plain="true">查询</button>
      </view>
      <view class="weui-flex__item">
        <button class='bton3 weui-btn' bindtap='login' type="primary" plain="true">登录</button>
      </view>
    </view>
  </view>
</view>